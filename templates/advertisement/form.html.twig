{% extends 'base.html.twig' %}

{% block title %}Creation d'une annonce{% endblock %}

{% form_theme form _self %}

{% block body %}

<div class="container">
    <h1>{{ formMethod }} une annonce</h1>

    {{ form_start(form) }}
    {{ form_widget(form)}}
    <button type="submit">{{ formMethod }} l'annonce</button>
    {{ form_end(form) }}
</div>

{% endblock %}

{% block _advertisement_pictures_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _advertisement_pictures_widget %}
    <p>Ajouter une image</p>

    {{ form_widget(form) }}
    
    <input type="hidden" id="widgets-counter" value="0">
    <button type="button" id="add-picture">Ajouter une image</button>

{% endblock %}

{% block _advertisement_pictures_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-10">
                <div class="col">
                {{ form_widget(form.url) }}
                </div>
                <div class="col">
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>
                <div class="col">
                    {{ form_widget(form.caption) }}
                    {{ form_errors(form.caption) }}
                </div>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{id}}">X</button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
    $('#add-picture').click(function(){
        const index = +$('#widgets-counter').val();

        const tmpl = $('#advertisement_pictures').data('prototype').replace(/__name__/g, index);

        $('#advertisement_pictures').append(tmpl);

        $('#widgets-counter').val(index + 1);

        handleDelete()
    });

    function handleDelete() {
        $('button[data-action="delete"').click(function(){
            const target = this.dataset.target
            $(target).remove();
        })
    }

    function updateWidgetsConter() {
        const count = +$('#add_pictures div.form-group').length;

        $('#widgets-counter').val(count);
    }
    updateWidgetsConter()
    handleDelete()
    </script>
{% endblock %}