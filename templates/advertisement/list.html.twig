{% extends 'base.html.twig' %}

{% block title %}listes des biens{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-3">Voici les biens !</h1>

    <div class="row">
        {% for advertisement in advertisements %}
        {% set advertisementLink = path('advertisement_show', {'slug': advertisement.slug}) %}
            <div class="col-md-4">
                <div class="card bg-light mb-3">
                    <div class="card-header text-center">
                        {{advertisement.rooms}} chambres, <strong>{{advertisement.price}}&euro; / nuit</strong><br>
                        <small>pas encore not√©</small>
                    </div>
                    <a href="{{ advertisementLink }}">
                        <img src="{{advertisement.coverImage}}" alt="Image l'appartement" 
                        style="height: 200px; width: 100%; display: block">
                    </a>

                    <div class="card-body">
                        <h4 class="card-title">
                        <a href="{{ advertisementLink }}">
                            {{advertisement.title}}
                        </a>
                        </h4>
                        <p class="text-center">
                            {{advertisement.introduction}}
                        </p>
                        <a href="{{ advertisementLink }}" class="btn btn-secondary">En savoir plus</a>
                    </div>
                </div> 
            </div>
        {% endfor %}    
    </div>
</div>

{% endblock %}
